<div class="row">
	<div class="col-md-6 offset-md-3">
		<div class="card">
  <div class="card-header">
   Tweet something
  </div>
	  <div class="card-block">
			<%= form_tag("/tweet") do %>
			<div >
					<%= text_field_tag(:tweet, value = nil, 
		  														 options = { 
		  														 		class: 'form-control col-10 offset-1',
		  														 		required: true
		  														 		}) %>
				<%= submit_tag("Send tweet", class: 'btn btn-md btn-danger float-right my-3') %>
			</div>
			<% end %>
	  </div>
	</div>	
	</div>
</div>
